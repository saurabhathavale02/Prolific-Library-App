<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <fragment android:name="com.example.saurabh.prolificlib.screen.BookDisplayFragment"
        android:id="@+id/bookdisplay_fragment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        />

    <fragment android:name="com.example.saurabh.prolificlib.screen.BookDescriptionFragment"
        android:id="@+id/bookdescription_fragment"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

</LinearLayout>